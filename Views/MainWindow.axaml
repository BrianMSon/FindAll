<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:FindAll.ViewModels"
        xmlns:models="using:FindAll.Models"
        xmlns:conv="using:FindAll.Converters"
        x:Class="FindAll.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="FindAll - File and Text Search"
        Width="1100" Height="750"
        MinWidth="800" MinHeight="500">

    <Window.Resources>
        <conv:FileSizeConverter x:Key="FileSizeConverter"/>
    </Window.Resources>

    <Window.Styles>
        <!-- Scrollbar styles for ResultsList -->
        <Style Selector="ListBox[Name=ResultsList] ScrollBar[Orientation=Vertical]">
            <Setter Property="AllowAutoHide" Value="False"/>
            <Setter Property="Width" Value="16"/>
            <Setter Property="MinWidth" Value="16"/>
        </Style>
        <Style Selector="ListBox[Name=ResultsList] ScrollBar[Orientation=Vertical]:pointerover">
            <Setter Property="Width" Value="16"/>
        </Style>
        <Style Selector="ListBox[Name=ResultsList] ScrollBar[Orientation=Vertical] /template/ Thumb">
            <Setter Property="Width" Value="12"/>
            <Setter Property="MinWidth" Value="12"/>
        </Style>
        <Style Selector="ListBox[Name=ResultsList] ScrollBar[Orientation=Vertical] /template/ Thumb /template/ Border">
            <Setter Property="Background" Value="#A0A0A0"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
        <Style Selector="ListBox[Name=ResultsList] ScrollBar[Orientation=Vertical]:pointerover /template/ Thumb /template/ Border">
            <Setter Property="Background" Value="#808080"/>
        </Style>
        <!-- Horizontal scrollbar -->
        <Style Selector="ListBox[Name=ResultsList] ScrollBar[Orientation=Horizontal]">
            <Setter Property="AllowAutoHide" Value="False"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="MinHeight" Value="16"/>
        </Style>
        <Style Selector="ListBox[Name=ResultsList] ScrollBar[Orientation=Horizontal]:pointerover">
            <Setter Property="Height" Value="16"/>
        </Style>
        <Style Selector="ListBox[Name=ResultsList] ScrollBar[Orientation=Horizontal] /template/ Thumb">
            <Setter Property="Height" Value="12"/>
            <Setter Property="MinHeight" Value="12"/>
        </Style>
        <Style Selector="ListBox[Name=ResultsList] ScrollBar[Orientation=Horizontal] /template/ Thumb /template/ Border">
            <Setter Property="Background" Value="#A0A0A0"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
        <Style Selector="ListBox[Name=ResultsList] ScrollBar[Orientation=Horizontal]:pointerover /template/ Thumb /template/ Border">
            <Setter Property="Background" Value="#808080"/>
        </Style>
    </Window.Styles>

    <Window.KeyBindings>
        <KeyBinding Gesture="Enter" Command="{Binding SearchCommand}"/>
        <KeyBinding Gesture="Escape" Command="{Binding CancelCommand}"/>
    </Window.KeyBindings>

    <Grid RowDefinitions="Auto,Auto,Auto,Auto,*,Auto,Auto">

        <!-- Row 0: Search Path -->
        <DockPanel Grid.Row="0" Margin="8,8,8,4">
            <TextBlock Text="Folder:"
                       VerticalAlignment="Center"
                       Width="55"
                       DockPanel.Dock="Left"/>
            <Button Content="Browse"
                    DockPanel.Dock="Right"
                    Margin="4,0,0,0"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    IsTabStop="False"
                    Focusable="False"
                    Click="OnBrowseClick"/>
            <TextBox Text="{Binding SearchPath}"
                     Watermark="Enter search folder path..."/>
        </DockPanel>

        <!-- Row 1: Include / Exclude / FileName -->
        <Grid Grid.Row="1" Margin="8,4,8,4" ColumnDefinitions="55,150,12,62,150,12,72,*">
            <TextBlock Grid.Column="0" Text="Filter:"
                       VerticalAlignment="Center"/>
            <TextBox Grid.Column="1"
                     Text="{Binding FilePattern}"
                     Watermark="*.cs, *.txt"/>

            <TextBlock Grid.Column="3" Text="Exclude:"
                       VerticalAlignment="Center"
                       ToolTip.Tip="Exclude patterns (e.g. *.dll, bin/, obj/, node_modules)"/>
            <TextBox Grid.Column="4"
                     Text="{Binding ExcludePattern}"
                     Watermark="*.dll, bin/, obj/"/>

            <TextBlock Grid.Column="6" Text="Filename:"
                       VerticalAlignment="Center"
                       ToolTip.Tip="Search file names (substring or regex)"/>
            <TextBox Grid.Column="7"
                     Text="{Binding FileNameSearch}"
                     Watermark="Search file names..."/>
        </Grid>

        <!-- Row 2: Text Search -->
        <DockPanel Grid.Row="2" Margin="8,4,8,4">
            <TextBlock Text="Text:"
                       VerticalAlignment="Center"
                       Width="55"
                       DockPanel.Dock="Left"/>
            <ToggleButton IsChecked="{Binding CaseSensitive}"
                          Content="Aa"
                          ToolTip.Tip="Case Sensitive"
                          DockPanel.Dock="Right"
                          Width="36" Height="32"
                          Margin="4,0,0,0"
                          FontSize="12"
                          IsTabStop="False"
                          Focusable="False"
                          HorizontalContentAlignment="Center"/>
            <ToggleButton IsChecked="{Binding UseRegex}"
                          Content=".*"
                          ToolTip.Tip="Use Regular Expression (applies to Text and Name search)"
                          DockPanel.Dock="Right"
                          Width="36" Height="32"
                          Margin="4,0,0,0"
                          FontSize="12"
                          FontWeight="Bold"
                          IsTabStop="False"
                          Focusable="False"
                          HorizontalContentAlignment="Center"/>
            <TextBox Text="{Binding TextSearch}"
                     Watermark="Search text in files..."/>
        </DockPanel>

        <!-- Row 3: Action Bar with Expand/Collapse -->
        <DockPanel Grid.Row="3" Margin="8,4,8,4">
            <Button Content="Search"
                    Command="{Binding SearchCommand}"
                    DockPanel.Dock="Left"
                    Width="80"
                    Margin="0,0,4,0"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Classes="accent"/>
            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    DockPanel.Dock="Left"
                    Width="80"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"/>
            <Button DockPanel.Dock="Left"
                    Command="{Binding PauseResumeCommand}"
                    Width="80"
                    Margin="4,0,0,0"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center">
                <TextBlock Text="{Binding IsPaused, Converter={x:Static conv:BoolToTextConverter.PauseResume}}"/>
            </Button>
            <ProgressBar IsIndeterminate="True"
                         IsVisible="{Binding IsSearching}"
                         DockPanel.Dock="Left"
                         Width="120"
                         Height="16"
                         Margin="8,0,0,0"/>

            <!-- Expand/Collapse buttons (fixed right) -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" Margin="4,0,0,0">
                <Button Content="Expand All"
                        Click="OnExpandAllClick"
                        Height="28" FontSize="11"
                        Padding="8,2"
                        Margin="0,0,4,0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        IsTabStop="False"
                        Focusable="False"
                        ToolTip.Tip="Expand all directory groups"/>
                <Button Content="Collapse All"
                        Click="OnCollapseAllClick"
                        Height="28" FontSize="11"
                        Padding="8,2"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        IsTabStop="False"
                        Focusable="False"
                        ToolTip.Tip="Collapse all directory groups"/>
            </StackPanel>

            <!-- StatusText fills remaining space -->
            <TextBlock Text="{Binding StatusText}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       FontSize="12"
                       Opacity="0.8"
                       Margin="8,0,8,0"
                       TextTrimming="CharacterEllipsis"/>
        </DockPanel>

        <!-- Row 4: Flat Results List (replaces TreeView for accurate scrollbar) -->
        <Border Grid.Row="4" BorderBrush="#94A3B8" BorderThickness="0,1,0,0" Margin="0">
            <ListBox Name="ResultsList"
                     ItemsSource="{Binding FlatDisplayItems}"
                     SelectedItem="{Binding SelectedItem}"
                     SelectionMode="Single"
                     Focusable="True"
                     AutoScrollToSelectedItem="True"
                     BorderThickness="0">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.DataTemplates>
                    <!-- Directory group row -->
                    <DataTemplate DataType="vm:DirectoryGroup">
                        <Border Height="24">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="2,0">
                                <Panel Width="16">
                                    <TextBlock Text="&#x25BC;" FontSize="10"
                                               VerticalAlignment="Center" HorizontalAlignment="Center"
                                               IsVisible="{Binding IsExpanded}"/>
                                    <TextBlock Text="&#x25B6;" FontSize="10"
                                               VerticalAlignment="Center" HorizontalAlignment="Center"
                                               IsVisible="{Binding !IsExpanded}"/>
                                </Panel>
                                <TextBlock Text="{Binding Directory}"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text=" ("
                                           Foreground="#64748B"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding ItemCount}"
                                           Foreground="#64748B"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text=")"
                                           Foreground="#64748B"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                    <!-- Individual result row -->
                    <DataTemplate DataType="models:SearchResult">
                        <Border Height="24">
                            <Grid ColumnDefinitions="200,80,130,60,*" VerticalAlignment="Center" Margin="20,0,2,0">
                                <TextBlock Grid.Column="0"
                                           Text="{Binding FileName}"
                                           TextTrimming="CharacterEllipsis"
                                           ToolTip.Tip="{Binding FullPath}"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding FileSize, Converter={StaticResource FileSizeConverter}}"
                                           Foreground="#64748B"
                                           Margin="8,0,0,0"/>
                                <TextBlock Grid.Column="2"
                                           Text="{Binding ModifiedDate, StringFormat=\{0:yyyy-MM-dd HH:mm\}}"
                                           Foreground="#64748B"
                                           Margin="8,0,0,0"/>
                                <TextBlock Grid.Column="3"
                                           Text="{Binding LineNumber}"
                                           Foreground="#7C3AED"
                                           Margin="8,0,0,0"/>
                                <TextBlock Grid.Column="4"
                                           Text="{Binding MatchingLine}"
                                           TextTrimming="CharacterEllipsis"
                                           FontFamily="Consolas, Courier New, monospace"
                                           FontSize="12"
                                           Foreground="#374151"
                                           Margin="8,0,0,0"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.DataTemplates>
            </ListBox>
        </Border>

        <!-- Row 5: GridSplitter -->
        <GridSplitter Grid.Row="5"
                      ResizeDirection="Rows"
                      Height="5"
                      Background="#CBD5E1"
                      HorizontalAlignment="Stretch"/>

        <!-- Row 6: Preview Panel -->
        <Border Grid.Row="6"
                MinHeight="100"
                MaxHeight="300"
                IsVisible="{Binding IsPreviewVisible}"
                BorderBrush="#94A3B8"
                BorderThickness="0,1,0,0"
                Padding="0">
            <DockPanel>
                <Border DockPanel.Dock="Top" Background="#EFF6FF" Padding="0">
                    <TextBlock Text="Preview"
                               FontWeight="SemiBold"
                               Foreground="#1D4ED8"
                               Margin="8,4"/>
                </Border>
                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto">
                    <SelectableTextBlock Text="{Binding PreviewText}"
                                         FontFamily="Consolas, Courier New, monospace"
                                         FontSize="12"
                                         Margin="8,4"
                                         TextWrapping="NoWrap"
                                         SelectionBrush="#3B82F6"
                                         SelectionForegroundBrush="White"/>
                </ScrollViewer>
            </DockPanel>
        </Border>
    </Grid>
</Window>
