<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:FindAll.ViewModels"
        xmlns:models="using:FindAll.Models"
        xmlns:conv="using:FindAll.Converters"
        x:Class="FindAll.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="FindAll - File and Text Search"
        Width="1100" Height="750"
        MinWidth="800" MinHeight="500"
        DragDrop.AllowDrop="True">

    <Window.Resources>
        <conv:FileSizeConverter x:Key="FileSizeConverter"/>
    </Window.Resources>

    <Window.Styles>
        <!-- Scrollbar styles for ResultsList -->
        <Style Selector="ListBox[Name=ResultsList] ScrollBar[Orientation=Vertical]">
            <Setter Property="AllowAutoHide" Value="False"/>
            <Setter Property="Width" Value="16"/>
            <Setter Property="MinWidth" Value="16"/>
        </Style>
        <Style Selector="ListBox[Name=ResultsList] ScrollBar[Orientation=Vertical]:pointerover">
            <Setter Property="Width" Value="16"/>
        </Style>
        <Style Selector="ListBox[Name=ResultsList] ScrollBar[Orientation=Vertical] /template/ Thumb">
            <Setter Property="Width" Value="12"/>
            <Setter Property="MinWidth" Value="12"/>
        </Style>
        <Style Selector="ListBox[Name=ResultsList] ScrollBar[Orientation=Vertical] /template/ Thumb /template/ Border">
            <Setter Property="Background" Value="#8FABC4"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
        <Style Selector="ListBox[Name=ResultsList] ScrollBar[Orientation=Vertical]:pointerover /template/ Thumb /template/ Border">
            <Setter Property="Background" Value="#5B87A8"/>
        </Style>
        <!-- Horizontal scrollbar -->
        <Style Selector="ListBox[Name=ResultsList] ScrollBar[Orientation=Horizontal]">
            <Setter Property="AllowAutoHide" Value="False"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="MinHeight" Value="16"/>
        </Style>
        <Style Selector="ListBox[Name=ResultsList] ScrollBar[Orientation=Horizontal]:pointerover">
            <Setter Property="Height" Value="16"/>
        </Style>
        <Style Selector="ListBox[Name=ResultsList] ScrollBar[Orientation=Horizontal] /template/ Thumb">
            <Setter Property="Height" Value="12"/>
            <Setter Property="MinHeight" Value="12"/>
        </Style>
        <Style Selector="ListBox[Name=ResultsList] ScrollBar[Orientation=Horizontal] /template/ Thumb /template/ Border">
            <Setter Property="Background" Value="#8FABC4"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
        <Style Selector="ListBox[Name=ResultsList] ScrollBar[Orientation=Horizontal]:pointerover /template/ Thumb /template/ Border">
            <Setter Property="Background" Value="#5B87A8"/>
        </Style>
        <!-- Compact ListBoxItem: remove default padding and min height -->
        <Style Selector="ListBox[Name=ResultsList] ListBoxItem">
            <Setter Property="Padding" Value="2,1"/>
            <Setter Property="MinHeight" Value="0"/>
        </Style>
        <Style Selector="ListBox[Name=ResultsList] ListBoxItem /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Padding" Value="2,1"/>
        </Style>
        <!-- Disable hover highlight on ListBox items -->
        <Style Selector="ListBox[Name=ResultsList] ListBoxItem:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="ListBox[Name=ResultsList] ListBoxItem:selected /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#3B82F6"/>
        </Style>
        <Style Selector="ListBox[Name=ResultsList] ListBoxItem:selected:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#3B82F6"/>
        </Style>
    </Window.Styles>

    <Window.KeyBindings>
        <KeyBinding Gesture="F5" Command="{Binding SearchCommand}"/>
        <KeyBinding Gesture="Escape" Command="{Binding CancelCommand}"/>
    </Window.KeyBindings>

    <Grid RowDefinitions="Auto,Auto,Auto,Auto,*,Auto,Auto">

        <!-- Background for top area (rows 0-3) -->
        <Border Grid.Row="0" Grid.RowSpan="4" Background="#D6E4F0"/>

        <!-- Row 0: Search Path -->
        <DockPanel Grid.Row="0" Margin="8,8,8,4">
            <TextBlock Text="Folder:"
                       VerticalAlignment="Center"
                       Width="55"
                       Foreground="#1E3A5F"
                       FontWeight="Bold"
                       DockPanel.Dock="Left"/>
            <Button Content="Browse"
                    DockPanel.Dock="Right"
                    Margin="4,0,0,0"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    IsTabStop="False"
                    Focusable="False"
                    Click="OnBrowseClick"/>
            <TextBox Text="{Binding SearchPath}"
                     Watermark="Enter search folder path..."/>
        </DockPanel>

        <!-- Row 1: Include / Exclude / FileName -->
        <Grid Grid.Row="1" Margin="8,4,8,4" ColumnDefinitions="55,150,12,62,150,12,72,*,Auto">
            <TextBlock Grid.Column="0" Text="Filter:"
                       VerticalAlignment="Center"
                       Foreground="#1E3A5F"
                       FontWeight="Bold"/>
            <TextBox Grid.Column="1"
                     Text="{Binding FilePattern}"
                     Watermark="*.cs, *.txt"
                     ToolTip.Tip="Include file patterns (comma-separated)&#x0a;Examples:&#x0a;  *.cs, *.txt    - C# and text files&#x0a;  *.xml, *.json  - XML and JSON files&#x0a;  *.cs, *.xaml   - C# and XAML files&#x0a;  *.*            - All files (default)"/>

            <TextBlock Grid.Column="3" Text="Exclude:"
                       VerticalAlignment="Center"
                       Foreground="#1E3A5F"
                       FontWeight="Bold"
                       ToolTip.Tip="Exclude patterns (comma-separated)&#x0a;Examples:&#x0a;  *.dll, *.exe       - Binary files&#x0a;  bin/, obj/         - Build output folders&#x0a;  node_modules/      - Node.js packages&#x0a;  *.min.js, *.map    - Minified JS and maps"/>
            <TextBox Grid.Column="4"
                     Text="{Binding ExcludePattern}"
                     Watermark="*.dll, bin/, obj/"
                     ToolTip.Tip="Exclude patterns (comma-separated)&#x0a;Examples:&#x0a;  *.dll, *.exe       - Binary files&#x0a;  bin/, obj/         - Build output folders&#x0a;  node_modules/      - Node.js packages&#x0a;  *.min.js, *.map    - Minified JS and maps"/>

            <TextBlock Grid.Column="6" Text="Filename:"
                       VerticalAlignment="Center"
                       Foreground="#1E3A5F"
                       FontWeight="Bold"
                       ToolTip.Tip="Search file names (substring or regex)"/>
            <TextBox Grid.Column="7"
                     Text="{Binding FileNameSearch}"
                     Watermark="Search file names..."/>
            <CheckBox Grid.Column="8"
                      IsChecked="{Binding NameSearchScope}"
                      IsThreeState="True"
                      VerticalAlignment="Center"
                      Margin="6,0,0,0"
                      FontSize="12"
                      IsTabStop="False"
                      Padding="2,0"
                      ToolTip.Tip="Click to cycle search scope:&#x0a;☐ File name only&#x0a;☑ Folder path only&#x0a;▣ File + Folder">
                <TextBlock Text="{Binding NameSearchScope, Converter={x:Static conv:NullableBoolToTextConverter.NameSearchScope}}"/>
            </CheckBox>
        </Grid>

        <!-- Row 2: Text Search -->
        <DockPanel Grid.Row="2" Margin="8,4,8,4">
            <TextBlock Text="Text:"
                       VerticalAlignment="Center"
                       Width="55"
                       Foreground="#1E3A5F"
                       FontWeight="Bold"
                       DockPanel.Dock="Left"/>
            <ToggleButton IsChecked="{Binding CaseSensitive}"
                          Content="Aa"
                          ToolTip.Tip="Case Sensitive"
                          DockPanel.Dock="Right"
                          Width="36" Height="32"
                          Margin="4,0,0,0"
                          FontSize="12"
                          IsTabStop="False"
                          Focusable="False"
                          HorizontalContentAlignment="Center"/>
            <ToggleButton IsChecked="{Binding UseRegex}"
                          Content=".*"
                          ToolTip.Tip="Use Regular Expression (applies to Text and Name search)"
                          DockPanel.Dock="Right"
                          Width="36" Height="32"
                          Margin="4,0,0,0"
                          FontSize="12"
                          FontWeight="Bold"
                          IsTabStop="False"
                          Focusable="False"
                          HorizontalContentAlignment="Center"/>
            <TextBox Text="{Binding TextSearch}"
                     Watermark="Search text in files..."/>
        </DockPanel>

        <!-- Row 3: Action Bar with Expand/Collapse -->
        <Border Grid.Row="3" Margin="6,4,6,4" Padding="4,2">
        <DockPanel>
            <Button Content="Search(F5)"
                    Command="{Binding SearchCommand}"
                    DockPanel.Dock="Left"
                    Width="100"
                    Margin="0,0,4,0"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Classes="accent"/>
            <Button Content="Cancel(ESC)"
                    Command="{Binding CancelCommand}"
                    DockPanel.Dock="Left"
                    Width="100"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"/>
            <Button DockPanel.Dock="Left"
                    Command="{Binding PauseResumeCommand}"
                    Width="80"
                    Margin="4,0,0,0"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center">
                <TextBlock Text="{Binding IsPaused, Converter={x:Static conv:BoolToTextConverter.PauseResume}}"/>
            </Button>

			<Panel DockPanel.Dock="Left"
                   Width="100" Height="16"
                   Margin="58,0,0,0"
                   VerticalAlignment="Center"
                   IsVisible="{Binding IsSearching}">

				<ProgressBar IsIndeterminate="{Binding !IsPaused}"
							 IsVisible="{Binding !IsPaused}"
							 Foreground="#3B82F6"
							 Background="#D2D8D0"
							 CornerRadius="2"
							 Width="100" Height="16"/>

				<Grid IsVisible="{Binding IsPaused}" Width="100" Height="16">
					<Border Background="#D2D8D0" Width="200" CornerRadius="2" />

					<Border Background="#3B82F6"
							Width="80"
							CornerRadius="2"
							HorizontalAlignment="Center" />
				</Grid>
			</Panel>

            <!-- Expand/Collapse buttons (fixed right) -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" Margin="4,0,0,0">
                <Button Click="OnExpandCollapseToggleClick"
                        Height="28" FontSize="11"
                        Padding="8,2"
                        Margin="0,0,4,0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        IsTabStop="False"
                        Focusable="False"
                        ToolTip.Tip="Toggle expand / collapse all groups">
                    <TextBlock Text="{Binding AllExpanded, Converter={x:Static conv:BoolToTextConverter.ExpandCollapse}}"/>
                </Button>
                <Button Click="OnSortToggleClick"
                        IsEnabled="{Binding !IsSearching}"
                        Height="28" FontSize="11"
                        Padding="8,2"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        IsTabStop="False"
                        Focusable="False"
                        ToolTip.Tip="Toggle sort (ascending / descending)">
                    <TextBlock Text="{Binding SortAscending, Converter={x:Static conv:NullableBoolToTextConverter.SortDirection}}"/>
                </Button>
                <Button Content="Copy"
                        Click="OnCopyVisibleClick"
                        Height="28" FontSize="11"
                        Padding="8,2"
                        Margin="8,0,0,0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        IsTabStop="False"
                        Focusable="False"
                        ToolTip.Tip="Copy visible items to clipboard (collapsed groups show folder only)"/>
                <Button Content="Copy All"
                        Click="OnCopyAllClick"
                        Height="28" FontSize="11"
                        Padding="8,2"
                        Margin="4,0,0,0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        IsTabStop="False"
                        Focusable="False"
                        ToolTip.Tip="Copy all results to clipboard (including collapsed items)"/>
            </StackPanel>

            <!-- StatusText fills remaining space -->
            <TextBlock Text="{Binding StatusText}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       FontSize="12"
                       Opacity="0.8"
                       Margin="8,0,8,0"
                       TextTrimming="CharacterEllipsis"/>
        </DockPanel>
        </Border>

        <!-- Row 4: Flat Results List (replaces TreeView for accurate scrollbar) -->
        <Border Grid.Row="4" BorderBrush="#7B9ABF" BorderThickness="0,2,0,0" Margin="0">
            <ListBox Name="ResultsList"
                     ItemsSource="{Binding FlatDisplayItems}"
                     SelectedItem="{Binding SelectedItem}"
                     SelectionMode="Single"
                     Focusable="True"
                     AutoScrollToSelectedItem="True"
                     BorderThickness="0"
                     Background="#F0F4F8">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.DataTemplates>
                    <!-- Directory group row -->
                    <DataTemplate DataType="vm:DirectoryGroup">
                        <Border Height="24" Background="#CDDCEB" CornerRadius="2">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="2,0">
                                <TextBlock Text="{Binding DisplayIndex}"
                                           Width="60" TextAlignment="Left"
                                           Foreground="#94A3B8" FontSize="10"
                                           Margin="0,0,6,0"
                                           VerticalAlignment="Center"/>
                                <Button Width="16" Height="16" Padding="0"
                                        Background="Transparent" BorderThickness="0"
                                        Click="OnToggleGroupClick"
                                        Cursor="Hand"
                                        Focusable="False" IsTabStop="False">
                                    <Panel>
                                        <TextBlock Text="&#x25BC;" FontSize="10"
                                                   VerticalAlignment="Center" HorizontalAlignment="Center"
                                                   IsVisible="{Binding IsExpanded}"/>
                                        <TextBlock Text="&#x25B6;" FontSize="10"
                                                   VerticalAlignment="Center" HorizontalAlignment="Center"
                                                   IsVisible="{Binding !IsExpanded}"/>
                                    </Panel>
                                </Button>
                                <TextBlock Text="{Binding Directory}"
                                           FontWeight="SemiBold"
                                           Foreground="#1E3A5F"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text=" ("
                                           Foreground="#64748B"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding ItemCount}"
                                           Foreground="#64748B"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text=")"
                                           Foreground="#64748B"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                    <!-- Individual result row -->
                    <DataTemplate DataType="models:SearchResult">
                        <Border Height="24">
                            <Grid ColumnDefinitions="50,Auto,80,130,60,*" VerticalAlignment="Center" Margin="20,0,2,0">
                                <TextBlock Grid.Column="0"
                                           Text="{Binding DisplayIndex}"
                                           TextAlignment="Right"
                                           Foreground="#94A3B8" FontSize="10"
                                           Margin="0,0,6,0"
										   VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding FileName}"
                                           Foreground="#1A161B"
                                           ToolTip.Tip="{Binding FullPath}"
                                           Margin="15,0,0,0"/>
                                <TextBlock Grid.Column="2"
                                           Text="{Binding FileSize, Converter={StaticResource FileSizeConverter}}"
                                           Foreground="#64748B"
                                           Margin="8,0,0,0"/>
                                <TextBlock Grid.Column="3"
                                           Text="{Binding ModifiedDate, StringFormat=\{0:yyyy-MM-dd HH:mm\}}"
                                           Foreground="#64748B"
                                           Margin="8,0,0,0"/>
                                <TextBlock Grid.Column="4"
                                           Text="{Binding LineNumber}"
                                           Foreground="#7C3AED"
                                           Margin="8,0,0,0"/>
                                <TextBlock Grid.Column="5"
                                           Text="{Binding MatchingLine}"
                                           TextTrimming="CharacterEllipsis"
                                           FontFamily="Consolas, Courier New, monospace"
                                           FontSize="12"
                                           Foreground="#374151"
                                           Margin="8,0,0,0"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.DataTemplates>
            </ListBox>
        </Border>

        <!-- Row 5: GridSplitter -->
        <GridSplitter Grid.Row="5"
                      ResizeDirection="Rows"
                      Height="5"
                      Background="#7B9ABF"
                      HorizontalAlignment="Stretch"
                      Focusable="False"
                      IsTabStop="False"/>

        <!-- Row 6: Preview Panel -->
        <Border Grid.Row="6"
                MinHeight="100"
                MaxHeight="300"
                BorderBrush="#7B9ABF"
                BorderThickness="0,1,0,0"
                Background="#F5F8FC"
                Padding="0">
            <DockPanel>
                <Border DockPanel.Dock="Top" Background="#C4D7ED" Padding="0">
                    <TextBlock Text="Preview"
                               FontWeight="Bold"
                               Foreground="#1A3A6B"
                               Margin="8,4"/>
                </Border>
                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto"
                              Focusable="False"
                              IsTabStop="False">
                    <SelectableTextBlock Text="{Binding PreviewText}"
                                         FontFamily="Consolas, Courier New, monospace"
                                         FontSize="12"
                                         Margin="8,4"
                                         TextWrapping="NoWrap"
                                         SelectionBrush="#3B82F6"
                                         SelectionForegroundBrush="White"
                                         Focusable="False"
                                         IsTabStop="False"/>
                </ScrollViewer>
            </DockPanel>
        </Border>
    </Grid>
</Window>
